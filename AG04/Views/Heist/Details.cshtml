@model AG04.HeistModel

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <p>
        @Html.ActionLink("Add new skill", "CreateHeistSkills", "Heist", new { id = @ViewBag.HeistID }, new { @class = "btn btn-primary btn-sm" })
        @Html.ActionLink("Add new member", "AddHeistMember", "Heist", new { heistID = @ViewBag.HeistID }, new { @class = "btn btn-primary btn-sm" })
    </p>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            Location
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Location)
        </dd>

        <dt>
            Start date
        </dt>

        <dd>
            @Html.DisplayFor(model => model.StartDate)
        </dd>

        <dt>
            Start time
        </dt>

        <dd>
            @Html.DisplayFor(model => model.StartTime)
        </dd>

        <dt>
            End date
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EndDate)
        </dd>

        <dt>
            End time
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EndTime)
        </dd>

        <dd>
            <table class="table table-striped">
                <tr>
                    <th>
                        Required skills
                    </th>
                    <th>
                        Skill level
                    </th>
                    <th>
                        Number of members
                    </th>
                    <th></th>
                </tr>

                @for (int i = 0; i < Model.HeistSkills.Count(); i++)
                {
            <tr>
                <td>
                    @Html.DisplayFor(m => m.HeistSkills[i].Name)
                </td>
                <td>
                    @Html.DisplayFor(m => m.HeistSkills[i].Level)
                </td>
                <td>
                    @Html.DisplayFor(m => m.HeistSkills[i].MembersNo)
                </td>
                
                <td>
                    @Html.ActionLink("Edit", "EditHeistSkill", "Heist", new { id = Model.HeistSkills[i].SkillID }, new { @class = "btn btn-info btn-sm" })
                    @Html.ActionLink("Delete", "DeleteHeistSkill", "Heist", new { id = Model.HeistSkills[i].SkillID }, new { @class = "btn btn-danger btn-sm" })
                </td>
            </tr>
                }
            <tr>
                <td></td>
                <td></td>
                <td>TOTAL: @ViewBag.MembersRequiredTotal</td>
                <td></td>
            </tr>
            </table>
        </dd>

        <dd>
            <table class="table table-striped">
                <tr>
                    <th>
                        Assigned members
                    </th>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>                  
                </tr>
                @for (int i = 0; i < Model.HeistMembers.Count(); i++)
                {
            <tr>
                <td>
                    @Html.DisplayFor(m => m.HeistMembers[i].Name)
                </td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td>
                    @Html.ActionLink("Delete", "DeleteMember", "Heist", new { id = Model.HeistMembers[i].MemberID }, new { @class = "btn btn-danger btn-sm" })
                </td>
            </tr>
                }
            <tr>
                <td></td>
                <td></td>
                <td></td>
                <td>TOTAL: @ViewBag.MembersAssignedTotal</td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>                           
            </table>
        </dd>
    </dl>
</div>
<p>   
    @Html.ActionLink("Back to List", "Index")
</p>
